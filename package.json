{
  "name": "@midia-simples/simetra-sdk",
  "version": "1.1.1",
  "main": "dist/simetra-sdk.cjs.js",
  "module": "dist/simetra-sdk.esm.js",
  "typings": "dist/types/simetra-sdk.d.ts",
  "files": [
    "dist"
  ],
  "author": "Midia Simples",
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": ">=1.13.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "prepare": "rollup -c",
    "docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "postdocs": "yarn docs:gh-pages-script",
    "docs:gh-pages-script": "node scripts/gh-pages-nojekyll-add.js",
    "predev": "rimraf dist",
    "dev": "rollup -c -w",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "precommit": "yarn lint:fix && yarn build"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-run": "^2.0.2",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.13.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "shelljs": "^0.8.4",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslib": "^2.0.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "axios": "^0.19.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "clearMocks": true,
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  }
}
